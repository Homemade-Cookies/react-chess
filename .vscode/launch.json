{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug React",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "trace": true
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "Launch React App",
      "url": "http://localhost:5000",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "build"
    }
  ],
  "inputs": [
    {
      "type": "promptString",
      "id": "filePath",
      "description": "Path to your HTML file"
    }
  ]
}
